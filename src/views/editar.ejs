    <div class="container">
    <h1> Datos del Producto</h1>
      <!-- El mismo del ciclo pasado, falta el de la foto metodo post y se aÃ±ade el de editar -->
    <form action="/editar/<%= producto._id %>" method="POST">
        <input type="text" name="nombre" placeholder="nombre" value="<%= producto.nombre%>">
        <input type="text" name="categoria" placeholder="categoria" value="<%= producto.categoria%>">
        <input type="text" name="cantidad" placeholder="cantidad" value="<%= producto.cantidad%>">
        <input type="text" name="descripcion" placeholder="descripcion" value="<%= producto.descripcion%>" >
        <input type="text" name="precio" placeholder="precio" value="<%= producto.precio%>">
        <button type="submit"> Actualizar </button>
    </form>
    </div>
